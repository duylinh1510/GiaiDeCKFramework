@model FlightManagement.Models.HanhKhach

@{
    ViewData["Title"] = "Thêm Hành Khách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Thêm hành khách</h2>
<form asp-action="ThemThongTinHanhKhach" asp-controller="HanhKhach" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Mã Hành Khách</label>
        <input asp-for="MAHK"/>
        <span asp-validation-for="MAHK" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Tên Hành Khách</label>
        <input asp-for="HOTEN" />
        <span asp-validation-for="HOTEN"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Địa Chỉ</label>
        <input asp-for="DIACHI"/>
        <span asp-validation-for="DIACHI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Điện Thoại</label>
        <input asp-for="DIENTHOAI"/>
        <span asp-validation-for="DIENTHOAI" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm"/>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}